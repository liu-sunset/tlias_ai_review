<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="peng.zhi.liu.mapper.ClazzMapper">

<!--    分页查询-->
    <select id="selectClazzPageMapper" resultType="peng.zhi.liu.pojo.Clazz">
        select * from clazz
        <where>
            <if test="name!=null and name!=''">name = #{name} and</if>
            <if test="begin!=null">begin_date>=#{begin} and</if>
            <if test="end!=null">end_date&lt;=#{end}</if>
        </where>
        order by update_time desc
    </select>
</mapper>